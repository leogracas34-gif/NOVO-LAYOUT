<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
        <shape>
            <solid android:color="#26FFFFFF" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <item android:top="0dp" android:bottom="400dp" android:left="50dp" android:right="50dp">
        <shape>
            <gradient 
                android:startColor="#00FFFFFF" 
                android:centerColor="#B3FFFFFF" 
                android:endColor="#00FFFFFF" 
                android:type="linear" />
            <size android:height="1.5dp" />
        </shape>
    </item>

    <item android:top="400dp" android:bottom="0dp" android:left="50dp" android:right="50dp">
        <shape>
            <gradient 
                android:startColor="#00FFFFFF" 
                android:centerColor="#B3FFFFFF" 
                android:endColor="#00FFFFFF" 
                android:type="linear" />
            <size android:height="1.5dp" />
        </shape>
    </item>
    
</layer-list>
